{
  "formulas": {
    "CM": {
      "name": "Message-Based Cost",
      "expression": "c_m * N_m",
      "description": "Cost for IoT message ingestion services (e.g., AWS IoT Core, Azure IoT Hub).",
      "parameters": {
        "c_m": {
          "description": "Unit price per message",
          "unit": "USD/message"
        },
        "N_m": {
          "description": "Total number of messages sent",
          "unit": "count"
        }
      }
    },
    "CE": {
      "name": "Execution-Based Cost",
      "expression": "c_e * max(0, N_e - freeRequests) + c_t * max(0, T_e - freeComputeTime)",
      "description": "Serverless function pricing combining per-request and per-duration charges.",
      "parameters": {
        "c_e": { "description": "Cost per request", "unit": "USD/request" },
        "N_e": { "description": "Number of requests", "unit": "count" },
        "freeRequests": { "description": "Free requests", "unit": "count" },
        "c_t": { "description": "Cost per GB-second", "unit": "USD/GB-s" },
        "T_e": { "description": "Total GB-seconds", "unit": "GB-s" },
        "freeComputeTime": {
          "description": "Free compute time",
          "unit": "GB-s"
        }
      }
    },
    "CA": {
      "name": "Action-Based Cost",
      "expression": "c_a * N_a",
      "description": "Cost for metered API operations, database reads/writes, or retrievals.",
      "parameters": {
        "c_a": { "description": "Price per action", "unit": "USD/action" },
        "N_a": { "description": "Number of actions", "unit": "count" }
      }
    },
    "CS": {
      "name": "Storage-Based Cost",
      "expression": "c_s * V * D",
      "description": "Storage cost proportional to volume and duration.",
      "parameters": {
        "c_s": { "description": "Price per GB-month", "unit": "USD/GB-month" },
        "V": { "description": "Stored volume", "unit": "GB" },
        "D": { "description": "Duration", "unit": "months" }
      }
    },
    "CU": {
      "name": "User-Based Cost",
      "expression": "(c_u_editor * N_editor + c_u_viewer * N_viewer) + c_u_hour * H",
      "description": "Cost for user-licensed services with editor/viewer and hourly workspace components.",
      "parameters": {
        "c_u_editor": { "description": "Price per editor", "unit": "USD/user" },
        "N_editor": { "description": "Number of editors", "unit": "count" },
        "c_u_viewer": { "description": "Price per viewer", "unit": "USD/user" },
        "N_viewer": { "description": "Number of viewers", "unit": "count" },
        "c_u_hour": {
          "description": "Hourly workspace price",
          "unit": "USD/hour"
        },
        "H": {
          "description": "Total hours per billing period",
          "unit": "hours"
        }
      }
    },
    "CTransfer": {
      "name": "Data Transfer Cost",
      "expression": "c_transfer * GB_transferred",
      "description": "Egress data transfer cost per GB.",
      "parameters": {
        "c_transfer": {
          "description": "Price per GB transferred",
          "unit": "USD/GB"
        },
        "GB_transferred": {
          "description": "Total data transferred",
          "unit": "GB"
        }
      }
    }
  }
}
